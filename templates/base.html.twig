<!DOCTYPE html>
<html lang="ru">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
               and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

    </head>
    <body>
        <header class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
            <a class="navbar-brand col-md-3 col-lg-2 me-0 px-3" href="{{ path("index") }}">test task</a>
            <ul class="navbar-nav px-3">
                {#            <li class="nav-item text-nowrap">#}
                {#                <a class="nav-link" href="{{ path("admin") }}">{{ app.user.email|e }}</a>#}
                {#            </li>#}
                {#            <li class="nav-item text-nowrap">#}
                {#                <a class="nav-link" href="{{ path("app_logout") }}">logout</a>#}
                {#            </li>#}

                {#            <li class="nav-item text-nowrap">#}
                {#                <a class="nav-link" href="{{ path("app_login") }}">Log in</a>#}
        {#        </li>#}
            </ul>
        </header>

        <div class="container-fluid">
            <div class="row">
                <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                    <a href="{{ path('add_profile') }}"  class="d-block">Создать профиль</a>
                    <hr>
                    {% for profile in profiles %}
                        <a href="{{ path('show', { id: profile.id }) }}" class="d-block">
                            {{ profile.surname|e }} {{ profile.name|e }} {{ profile.patronymic|e }}
                        </a>
                        <hr>
                    {% endfor %}
                </nav>
                <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                    {% block body %}{% endblock %}
                </main>
            </div>
        </div>
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>